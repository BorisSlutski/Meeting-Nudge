{
  "name": "meeting-nudge",
  "productName": "Meeting Nudge",
  "version": "1.0.0",
  "description": "Meeting reminder with full-screen blocking alerts",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "Boris",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "googleapis": "^129.0.0",
    "keytar": "^7.9.0",
    "node-schedule": "^2.1.1"
  },
  "build": {
    "appId": "com.meeting.nudge",
    "productName": "Meeting Nudge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "resources/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "resources/icon.png",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
